    <section class="signup">
        <div class="login-form">
            <h3>Log in</h3>
            <hr>
            <h2>Welcome to Airbnb</h2>
            <!-- login -->
            <form action="">
                <input type="email" id="email" placeholder="Email">
                <input type="password" id="pass" placeholder="Password">
                <button class="loginBtn" type="submit">Log in</button>
            </form>
        </div>
        <div class="signup-form">
            <h3>Sign Up</h3>
            <hr>
            <h2>Welcome to Airbnb</h2>
            <!-- sign up -->
            <form action="">
                <input type="text" id="fname" placeholder="First Name">
                <input type="text" id="fname" placeholder="Last Name">
                <p>Make sure it matches the name of your government ID</p>
                <input type="date" id="dob" placeholder="Enter Date of Birth">
                <p>To sign up, you need to be at least 18. Your birthday won't be shared with other people who use Airbnb</p>
                <input type="email" id="email" placeholde="Email">
                <input type="password" placeholder="Password">
                <button class="agreeBtn" type="submit">Agree and Continue</button>
            </form>
        </div>
        <div class="profile-form">
            <h3>Profile</h3>
            <hr>
            <h2>Update Your Profile</h2>
            <!-- profile of user -->
            <form action="">
                <input type="text" id="fname" placeholder="First Name">
                <input type="text" id="fname" placeholder="Last Name">
                <p>Make sure it matches the name of your government ID</p>
                <input type="date" id="dob" placeholder="Enter Date of Birth">
                <p>To sign up, you need to be at least 18. Your birthday won't be shared with other people who use Airbnb</p>
                <input type="email" id="email" placeholde="Email">
                <input type="text" id="phone" placeholder="Phone Number">
                <input type="text" id="gender" placeholder="Gender">
                <input type="text" id="country" placeholder="Country">
                <input type="text" id="city" placeholder="City">
                <select name="userType" id="userType">
                    <option value="guest">Guest</option>
                    <option value="host">Host</option>
                </select>
                <button type="submit" id="saveBtn">Save Profile</button>
            </form>
        </div>
    </section>
